<!-- Main Content -->
<div class="mobile-content">
    <div>
        <!-- Heading (Top Left) -->
        <h1 style="font-size: 28px; font-weight: bold; color: #ec4899; text-align: left; margin: 20px 0;">
            DIPPIN' DONUTS
        </h1>
        
        <!-- Contact Form with 4 Buttons/Fields -->
        <div style="margin: 30px 0;">
            <form style="display: flex; flex-direction: column; gap: 15px;">
                <!-- Name Field -->
                <input 
                    type="text" 
                    placeholder="Name" 
                    style="padding: 15px; border: 2px solid #e2e8f0; border-radius: 25px; font-size: 16px; outline: none; transition: all 0.3s ease;"
                    onfocus="this.style.borderColor='#ec4899'"
                    onblur="this.style.borderColor='#e2e8f0'"
                >
                
                <!-- Email Field -->
                <input 
                    type="email" 
                    placeholder="Email" 
                    style="padding: 15px; border: 2px solid #e2e8f0; border-radius: 25px; font-size: 16px; outline: none; transition: all 0.3s ease;"
                    onfocus="this.style.borderColor='#ec4899'"
                    onblur="this.style.borderColor='#e2e8f0'"
                >
                
                <!-- Contact Field -->
                <input 
                    type="tel" 
                    placeholder="Contact" 
                    style="padding: 15px; border: 2px solid #e2e8f0; border-radius: 25px; font-size: 16px; outline: none; transition: all 0.3s ease;"
                    onfocus="this.style.borderColor='#ec4899'"
                    onblur="this.style.borderColor='#e2e8f0'"
                >
                
                <!-- Address Field -->
                <textarea 
                    placeholder="Address" 
                    rows="3"
                    style="padding: 15px; border: 2px solid #e2e8f0; border-radius: 25px; font-size: 16px; outline: none; transition: all 0.3s ease; resize: none;"
                    onfocus="this.style.borderColor='#ec4899'"
                    onblur="this.style.borderColor='#e2e8f0'"
                ></textarea>
            </form>
        </div>
    </div>
    
    <!-- Submit Button -->
    <div style="margin-bottom: 40px;">
        <a href="/info" class="mobile-button">Submit</a>
    </div>
</div>

